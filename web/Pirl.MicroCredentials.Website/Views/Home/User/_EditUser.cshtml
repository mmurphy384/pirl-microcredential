@model Pirl.MicroCredentials.Models.UserViewModel

<script id="userModalTemplate" type="text/html">
    <div id="userModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editUserTitle">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="editUserTitle">Edit User</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="bs-callout bs-callout-danger" style="display: none;" data-bind="visible: popupError() != undefined">
                        <h4>User Error</h4>
                        <p id="ErrorMessage" data-bind="text: popupError"></p>
                    </div>

                    <form id="userDialogForm" data-bind="with: userModalFormModel">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "" })
                            <div>
                                @Html.TextBoxFor(m => m.FirstName, new { data_bind = "value: firstName", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "" })
                            <div>
                                @Html.TextBoxFor(m => m.LastName, new { data_bind = "value: lastName", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "" })
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { data_bind = "value: email", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal" aria-hidden="true">Close</button>
                    <button class="btn btn-primary" data-bind="click: $root.saveUser">Save</button>
                </div>
            </div>
        </div>
    </div>
</script>